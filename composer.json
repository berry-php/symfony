{
    "name": "berry/symfony",
    "description": "Symfony bundle for the berry/html eDSL",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Berry\\Symfony\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Berry\\Symfony\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Christopher Kaster",
            "email": "me@atomicptr.de"
        }
    ],
    "require": {
        "php": ">=8.3",
        "berry/html": ">=0.14",
        "symfony/framework-bundle": "^7|^8"
    },
    "require-dev": {
        "berry/extension-method-stub-generator": "^0.2.0",
        "pestphp/pest": "^4",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "symfony/security-bundle": "^7|^8",
        "symfony/ux-icons": "^2"
    },
    "scripts": {
        "test": "php vendor/bin/pest",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage"
    },
    "scripts-aliases": {
        "test": [
            "pest"
        ]
    },
    "suggest": {
        "symfony/ux-icons": "Required to render icons via the IconFactory",
        "symfony/security-bundle": "Allows accessing the current user, token or check permissions within components",
        "twig/twig": "Allows rendering twig blocks and templates with Berry"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true,
            "berry/extension-method-stub-generator": true
        }
    }
}
